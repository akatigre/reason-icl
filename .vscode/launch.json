{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Accelerate: exp/run.py",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "accelerate.commands.launch",
            "args": [
                "--multi_gpu",
                "--num_processes=2",
                "exp/run.py",
                "--task",
                "gsm8k",
                "--seed",
                "1",
                "--icl_shot",
                "8",
                "--batch_size_per_gpu",
                "2",
                "--num_gpus",
                "2",
                "--model_path",
                "Qwen/Qwen2.5-1.5B-Instruct",
                "--retrieve_model_path",
                "Qwen/Qwen3-Embedding-4B"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python3.9",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "4,5"
            }
        }
    ]
}