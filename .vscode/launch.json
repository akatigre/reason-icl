{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "exp/run.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/exp/run.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--num_gpus",
                "2",
                "--model_path",
                "Qwen/Qwen2.5-1.5B-Instruct",
                "--retrieve_model_path",
                "Qwen/Qwen3-Embedding-4B"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python3.9",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0,1"
            }
        }
    ]
}